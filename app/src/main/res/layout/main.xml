<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:background="#FFFFFF">

	<android.support.v7.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:elevation="2dp"
		android:fitsSystemWindows="true"
		app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
		android:background="#3BAFDA"/>

	<RelativeLayout
		android:layout_height="60dp"
		android:layout_below="@id/toolbar"
		android:layout_width="match_parent"
		android:id="@+id/mainEditText1">

		<TextView
			android:layout_height="match_parent"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_width="50dp"
			android:gravity="center"
			android:id="@+id/operator"
			android:textColor="#000000"/>

		<TextView
			android:layout_height="30dp"
			android:layout_width="match_parent"
			android:layout_toRightOf="@id/operator"
			android:id="@+id/hasil1"
			android:gravity="right|center"
			android:paddingRight="5dp"
			android:textColor="#000000"/>

		<TextView
			android:layout_height="30dp"
			android:layout_width="match_parent"
			android:layout_toRightOf="@id/operator"
			android:layout_below="@id/hasil1"
			android:gravity="right|center"
			android:paddingRight="5dp"
			android:textColor="#000000"
			android:id="@+id/hasil2"/>

	</RelativeLayout>

	<EditText
		android:layout_height="40dp"
		android:inputType="number|numberDecimal|numberSigned"
		android:cursorVisible="false"
		android:layout_width="match_parent"
		android:ems="10"
		app:backgroundTint="#000000"
		android:layout_below="@id/mainEditText1"
		android:id="@+id/number"
		android:gravity="right|center"
		android:textColor="@drawable/disablecolor"/>

	<RelativeLayout
		android:layout_height="90dp"
		android:layout_width="match_parent"
		android:layout_below="@id/number"
		android:gravity="center"
		android:id="@+id/mainRelativeLayout1">

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="1"
			android:id="@+id/satu"
			android:layout_marginRight="10dp"
			android:background="@drawable/stylewhiteblack"
			android:textColor="#000000"/>

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="2"
			android:background="@drawable/stylewhiteblack"
			android:layout_toRightOf="@id/satu"
			android:id="@+id/dua"
			android:layout_marginRight="10dp"
			android:textColor="#000000"/>

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="3"
			android:background="@drawable/stylewhiteblack"
			android:layout_toRightOf="@id/dua"
			android:id="@+id/tiga"
			android:layout_marginRight="10dp"
			android:textColor="#000000"/>

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="+"
			android:background="@drawable/stylewhiteblack"
			android:layout_toRightOf="@id/tiga"
			android:id="@+id/tambah"
			android:textColor="#000000"/>

	</RelativeLayout>

	<RelativeLayout
		android:layout_height="90dp"
		android:layout_width="match_parent"
		android:layout_below="@id/mainRelativeLayout1"
		android:gravity="center"
		android:id="@+id/mainRelativeLayout2">

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="4"
			android:background="@drawable/stylewhiteblack"
			android:id="@+id/empat"
			android:layout_marginRight="10dp"
			android:textColor="#000000"/>

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="5"
			android:background="@drawable/stylewhiteblack"
			android:layout_toRightOf="@id/empat"
			android:id="@+id/lima"
			android:layout_marginRight="10dp"
			android:textColor="#000000"/>

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="6"
			android:background="@drawable/stylewhiteblack"
			android:layout_toRightOf="@id/lima"
			android:id="@+id/enam"
			android:layout_marginRight="10dp"
			android:textColor="#000000"/>

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="-"
			android:background="@drawable/stylewhiteblack"
			android:layout_toRightOf="@id/enam"
			android:id="@+id/kurang"
			android:textColor="#000000"/>

	</RelativeLayout>

	<RelativeLayout
		android:layout_height="90dp"
		android:layout_width="match_parent"
		android:layout_below="@id/mainRelativeLayout2"
		android:gravity="center"
		android:id="@+id/mainRelativeLayout3">

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="7"
			android:id="@+id/tujuh"
			android:background="@drawable/stylewhiteblack"
			android:layout_marginRight="10dp"
			android:textColor="#000000"/>

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="8"
			android:background="@drawable/stylewhiteblack"
			android:layout_toRightOf="@id/tujuh"
			android:id="@+id/delapan"
			android:layout_marginRight="10dp"
			android:textColor="#000000"/>

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="9"
			android:background="@drawable/stylewhiteblack"
			android:layout_toRightOf="@id/delapan"
			android:id="@+id/sembilan"
			android:layout_marginRight="10dp"
			android:textColor="#000000"/>

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="Ã—"
			android:background="@drawable/stylewhiteblack"
			android:layout_toRightOf="@id/sembilan"
			android:id="@+id/kali"
			android:textColor="#000000"/>

	</RelativeLayout>

	<RelativeLayout
		android:layout_height="90dp"
		android:layout_width="match_parent"
		android:layout_below="@id/mainRelativeLayout3"
		android:gravity="center"
		android:id="@+id/mainRelativeLayout4">

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:background="@drawable/stylewhiteblack"
			android:text="Clear"
			android:id="@+id/clear"
			android:layout_marginRight="10dp"
			android:textColor="#000000"
			android:textStyle="bold"
			android:typeface="normal"/>

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="0"
			android:background="@drawable/stylewhiteblack"
			android:layout_toRightOf="@id/clear"
			android:id="@+id/kosong"
			android:layout_marginRight="10dp"
			android:textColor="#000000"/>

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="%"
			android:background="@drawable/stylewhiteblack"
			android:layout_toRightOf="@id/kosong"
			android:id="@+id/persen"
			android:layout_marginRight="10dp"
			android:textColor="#000000"/>

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="/"
			android:background="@drawable/stylewhiteblack"
			android:layout_toRightOf="@id/persen"
			android:id="@+id/bagi"
			android:textColor="#000000"/>

	</RelativeLayout>

	<RelativeLayout
		android:layout_height="90dp"
		android:layout_width="match_parent"
		android:layout_below="@id/mainRelativeLayout4"
		android:gravity="center"
		android:id="@+id/mainRelativeLayout5">

		<Button
			android:layout_height="70dp"
			android:layout_width="150dp"
			android:background="@drawable/stylewhiteblack"
			android:text="="
			android:id="@+id/samadengan"
			android:layout_marginRight="10dp"
			android:textColor="#000000"/>

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="."
			android:background="@drawable/stylewhiteblack"
			android:layout_toRightOf="@id/samadengan"
			android:id="@+id/titik"
			android:layout_marginRight="10dp"
			android:textColor="@drawable/disablecolor"/>

		<Button
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:text="&lt;"
			android:layout_toRightOf="@id/titik"
			android:id="@+id/hapus"
			android:background="@drawable/stylewhiteblack"
			android:textColor="#000000"/>

	</RelativeLayout>

</RelativeLayout>

